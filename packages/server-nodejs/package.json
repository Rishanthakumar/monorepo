{
  "name": "hydra-server-nodejs",
  "version": "1.0.0-alpha.0",
  "description": "Hydra Nodjs Server",
  "main": "./dist/bin/bootstrap.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon --exec babel-node ./src/bin/bootstrap.js",
    "prestart:prod": "yarn build",
    "start:prod": "cross-env NODE_ENV=production node ./dist/bin/bootstrap.js",
    "debug": "cross-env NODE_ENV=debug nodemon --inspect --exec babel-node ./src/bin/bootstrap.js",
    "prebuild": "rm -rf dist",
    "build": "babel ./src --out-dir dist --copy-files",
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "yarn lint -- --fix",
    "format": "prettier --write 'src/**/*.js'"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "core-js": "^3.36.0",
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "regenerator-runtime": "^0.14.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.23.9",
    "@babel/node": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "babel-plugin-module-resolver": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-babel-module": "^5.3.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5"
  }
}
